{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["ES6", "ScriptHost", "ES2016.Array.Include"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/@types",
      "test/@types"
    ],
    "resolveJsonModule": true,
  },
  "include" : ["src/**/*"],
  "exclude": ["test/**/*.test.ts"],
}
